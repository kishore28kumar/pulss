{
  "name": "pulss-backend",
  "version": "1.0.0",
  "description": "Pulss Platform Backend - Node.js/Express/PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "psql $DATABASE_URL -f migrations/01_init_schema.sql && psql $DATABASE_URL -f migrations/02_advanced_features.sql",
    "seed": "psql $DATABASE_URL -f seed/seed_data.sql",
    "migrate:local": "psql -h localhost -U postgres -d pulssdb -f migrations/01_init_schema.sql && psql -h localhost -U postgres -d pulssdb -f migrations/02_advanced_features.sql",
    "seed:local": "psql -h localhost -U postgres -d pulssdb -f seed/seed_data.sql",
    "test": "jest --coverage",
    "lint": "eslint . --no-ignore --ignore-pattern 'node_modules/**'",
    "lint:fix": "eslint . --no-ignore --ignore-pattern 'node_modules/**' --fix",
    "format": "prettier --write \"**/*.{js,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,json,md}\" --ignore-path .gitignore",
    "validate": "npm run lint && npm run format:check",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:check": "npm run security:audit && echo 'Run npm run security:snyk for Snyk scanning'",
    "security:snyk": "snyk test --severity-threshold=high"
  },
  "keywords": [
    "pulss",
    "pharmacy",
    "ecommerce",
    "multi-tenant",
    "loyalty"
  ],
  "author": "Pulss Team",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "express-slow-down": "^3.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.4",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.10.1",
    "papaparse": "^5.5.3",
    "pg": "^8.12.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.4",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "validator": "^13.15.15",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
